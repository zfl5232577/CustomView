<?xml version="1.0" encoding="utf-8"?>
<com.mark.customview.ItemSwipeMenuLayout.ItemSwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:leftMenuView="@+id/lift_view"
    app:rightMenuView="@+id/right_view"
    app:contentView="@+id/tv_name">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/lift_view"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:gravity="center" />

    <TextView
        android:id="@+id/right_view"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_red_light"
        android:gravity="center" />

</com.mark.customview.ItemSwipeMenuLayout.ItemSwipeMenuLayout>