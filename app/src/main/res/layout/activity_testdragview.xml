<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:QQStepView="http://schemas.android.com/apk/res-auto">
    <com.mark.customview.DragView.TestDragView
        android:id="@+id/step_view"
        QQStepView:layout_constraintDimensionRatio="1:1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/dragView"
            android:text="dragView"
            android:layout_marginLeft="150dp"
            android:textColor="@android:color/white"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/edgeDragView"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="150dp"
            android:text="edgeDragView"
            android:textColor="@android:color/white"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorPrimary"/>


        <TextView
            android:id="@+id/autoBackView"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="150dp"
            android:text="autoBackView"
            android:textColor="@android:color/white"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@android:color/black"/>

    </com.mark.customview.DragView.TestDragView>

</android.support.constraint.ConstraintLayout>